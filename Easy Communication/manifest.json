{
    "manifest_version": 3,
    "name": "IMEI Cihaz Yöneticisi",
    "version": "1.0.0",
    "description": "Telefon IMEI bilgilerini Firebase ile yönetin",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>",
                "file:///*"
            ],
            "js": [
                "firebase-app.js",
                "firebase-firestore.js",
                "content.js"
            ],
            "css": [
                "panel.css"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.svg",
        "48": "icons/icon48.svg",
        "128": "icons/icon128.svg"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "panel.html",
                "panel.css",
                "firebase-config.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}